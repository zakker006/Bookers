<!DOCTYPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
  <body>
    <h1>Books</h1>
    <%= flash[:notice] %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><a><%= link_to "Show", "/books/#{book.id}" %></a></td>
            <td><a><%= link_to "Edit", "/books/#{book.id}/edit" %></a></td>
            <td><a><%= link_to "Destroy", "/books/#{book.id}", method: :delete %></a></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <h2>New book</h2>
    <!-- form_with部分 -->
    <%= form_with model:@book, local:true do |f| %>

    <div>
      <label>Title</label><br>
      <%= f.text_field :title %>
    </div>
    <div>
      <label>Body</label><br>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>

  </body>
</html>